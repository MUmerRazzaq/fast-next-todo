# =============================================================================
# Fast Next Todo - Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Neon PostgreSQL)
# -----------------------------------------------------------------------------
# Get your connection string from https://neon.tech
# Use the pooled connection string (with -pooler suffix)
DATABASE_URL=postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Must match the secret used in the frontend Better Auth configuration
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-super-secret-key-minimum-32-characters-long

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
DEBUG=true
ENVIRONMENT=development
APP_NAME=Fast Next Todo API
APP_VERSION=1.0.0

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
# Primary frontend URL for CORS configuration
# Production: https://fast-next-todo.vercel.app
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated, optional)
# Example: ALLOWED_ORIGINS=https://staging.example.com,https://preview.example.com
ALLOWED_ORIGINS=

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=10
